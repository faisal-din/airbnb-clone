<% layout('layouts/boilerplate.ejs') -%>
<body>
  <div class="row">
    <div class="card col-6 offset-2 show-card listing-card">
      <h2><b> <%= listing.title %> </b></h2>
      <img
        src="<%= listing.image %>"
        class="card-img-top show-img"
        alt="listing_img"
      />
      <div class="card-body">
        <p class="card-text mt-2">
          <b>Owned by: </b><%= listing.owner.username %>
        </p>
        <p class="card-text"><%= listing.description %></p>
        <p class="card-text">
          Rs: <%= listing.price.toLocaleString("en-IN") %>
        </p>
        <p class="card-text"><%= listing.location %></p>
        <p class="card-text"><%= listing.country %></p>
      </div>
      <div class="btns">
        <form action="/listings/<%= listing._id %>/edit" method="GET">
          <button class="btn btn-danger edit-btn">Edit</button>
        </form>

        <form
          action="/listings/<%= listing._id %>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-dark delete-btn">Delete</button>
        </form>
      </div>
      <hr />
    </div>

    <div class="reviews col-6 offset-2 mb-4">
      <h4>Leave a review</h4>

      <form
        action="/listings/<%= listing.id %>/reviews"
        method="POST"
        class="mb-3 needs-validation"
        novalidate
      >
        <div class="form-group">
          <div class="mb-3">
            <label for="rating" class="form-label">Rating</label>
            <input
              type="range"
              min="1"
              max="5"
              id="rating"
              name="review[rating]"
              class="form-range"
            />
          </div>
          <div class="mb-3">
            <label for="comment" class="form-label">Comments</label>
            <textarea
              id="comment"
              name="review[comment]"
              cols="20"
              rows="5/"
              placeholder="Write your review here"
              class="form-control"
              required
            ></textarea>
            <div class="invalid-feedback">Please write a review.</div>
          </div>
        </div>
        <button type="submit" class="btn btn-primary mt-4">Submit</button>
      </form>

      <hr />

      <h4>All Reviews</h4>
      <div class="reviews">
        <div class="row">
          <% listing.reviews.forEach(function(review) { %>
          <div class="card col-5 mb-3 ms-3 review-card">
            <div class="card-body">
              <h6 class="card-title">John Doe</h6>
              <p class="card-text"><b>Comment:</b> <%= review.comment %></p>
              <p class="card-title"><%= review.rating %> stars</p>
            </div>
            <form
              action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
              class="mb-2"
              method="POST"
            >
              <button class="btn btn-sm btn-dark">Delete</button>
            </form>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </div>
</body>
